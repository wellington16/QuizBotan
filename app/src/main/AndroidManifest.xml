<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jogobotanica.com.br.quizbotan">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait">
        <activity android:name=".gui.PrincipalActivity"/>
        <activity android:name=".gui.FimJogoActivity"  android:screenOrientation="portrait"/>
        <activity android:name=".gui.JogadasActivity" android:screenOrientation="portrait"/>
        <activity android:name=".gui.PontosActivity" android:screenOrientation="portrait"/>
        <activity android:name=".gui.SplashActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".gui.AjudaActivity"></activity>
    </application>

</manifest>